#/bin/bash
#find ./src -type d -execdir make \;

#cd ./src
#find -type f -name 'Makefile' -exec bash -c 'cd "$(dirname "{}")" && make' \;

cd ./
if [ -n "$1" ]; then
	while [ -n "$1" ]; do
		find -type f -name $1 -exec bash -c 'cd "$(dirname "{}")" && make' \;
		shift
	done
else
	find -type f -name 'Makefile' -exec bash -c 'cd "$(dirname "{}")" && make' \;
fi
